<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".QuatreJeux">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp">


            <ImageButton
                android:id="@+id/imageMenu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                app:srcCompat="@drawable/menu"
                android:adjustViewBounds="true"
                android:background="#007EA7"
                android:scaleType="fitStart"
                android:padding="20dp"
                />

            <TextView
                android:id="@+id/textView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#007EA7"
                android:gravity="center"
                android:text="Quatre Jeux"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonFinir"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Finir"
                android:textColor="#FFFFFF"
                android:background="#007EA7"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp"
            android:weightSum="4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:layout_weight="1"
                tools:layout_editor_absoluteX="1dp"
                tools:layout_editor_absoluteY="1dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    tools:layout_editor_absoluteX="1dp"
                    tools:layout_editor_absoluteY="1dp"
                    android:paddingTop="12dp"
                    >


                    <TextView
                        android:id="@+id/textScore"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="SCORE"
                        android:paddingLeft="4dp"
                        android:textStyle="bold"

                        />

                    <ImageButton
                        android:id="@+id/imageScore"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/statistics"
                        android:background="@android:color/background_light"
                        android:adjustViewBounds="true"
                        android:scaleType="fitEnd"
                        android:padding="5dp"
                         />

                </LinearLayout>
                <View android:layout_width="match_parent"
                    android:background="@android:color/holo_blue_dark"
                    android:layout_height="2dp" />


                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"

                    android:orientation="horizontal"
                    tools:layout_editor_absoluteX="1dp"
                    tools:layout_editor_absoluteY="1dp">


                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        >
                        <TextView
                            android:id="@+id/textJoueur1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:textAlignment="textEnd"
                            android:text="JOUEUR 1"
                            android:paddingRight="12dp"
                            android:width="100px"
                            />

                        <TextView
                            android:id="@+id/scoreJeuJoueur1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:text="-"
                            android:background="#BDE3F4"/>

                        <TextView
                            android:id="@+id/scoreSet1Joueur1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:text="-" />

                        <TextView
                            android:id="@+id/scoreSet2Joueur1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:text="-"
                            android:background="#BDE3F4"/>

                        <TextView
                            android:id="@+id/scoreSet3Joueur1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:text="-" />
                    </TableRow>

                    <View android:layout_width="match_parent"
                        android:background="@android:color/holo_blue_dark"
                        android:layout_height="2dp" />

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textJoueur2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:width="100px"
                            android:paddingRight="12dp"
                            android:text="JOUEUR 2"
                            android:textAlignment="textEnd"
                            android:gravity="end" />



                        <TextView
                            android:id="@+id/scoreJeuJoueur2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#BDE3F4"
                            android:text="-"
                            android:textAlignment="center" />


                        <TextView
                            android:id="@+id/scoreSet1Joueur2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="-"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/scoreSet2Joueur2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#BDE3F4"
                            android:text="-"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/scoreSet3Joueur2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="-"
                            android:textAlignment="center" />
                    </TableRow>
                    <View android:layout_width="match_parent"
                        android:background="@android:color/holo_blue_dark"
                        android:layout_height="2dp" />

                </TableLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="1dp"
                tools:layout_editor_absoluteY="1dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    tools:layout_editor_absoluteX="1dp"
                    tools:layout_editor_absoluteY="1dp"
                    >

                    <TextView
                        android:id="@+id/textScore"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="SERVEUR"
                        android:textStyle="bold"
                        android:paddingLeft="4dp"

                        />

                    <ImageButton
                        android:id="@+id/imageRefresh"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/refresh"
                        android:background="@android:color/background_light"
                        android:adjustViewBounds="true"
                        android:scaleType="fitEnd"
                        android:padding="10dp"
                         />

                </LinearLayout>

                <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:orientation="horizontal"
                    tools:layout_editor_absoluteX="1dp"
                    tools:layout_editor_absoluteY="1dp">


                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        >
                        <Button
                            android:id="@+id/premiereBalle"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:textAlignment="center"
                            android:text=" 1 ère balle"
                            android:width="100px"
                            />

                        <Button
                            android:id="@+id/deuxiemeBalle"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:textAlignment="center"
                            android:text=" 2 ème balle"
                            android:width="100px"
                            />

                        <Button
                            android:id="@+id/doubleFaute"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:textAlignment="center"
                            android:text="Double Faute"
                            android:width="100px"
                            />

                    </TableRow>


                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:weightSum="3"
                        >
                        <Button
                            android:id="@+id/acePremiereBalle"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:text="ACE"
                            android:width="100px"
                            />

                        <Button
                            android:id="@+id/aceDeuxiemeBalle"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:text="ACE"
                            android:width="100px"
                            />

                    </TableRow>
                </TableLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="1dp"
                tools:layout_editor_absoluteY="1dp">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    tools:layout_editor_absoluteX="1dp"
                    tools:layout_editor_absoluteY="1dp"
                    >

                    <TextView
                        android:id="@+id/textScore"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="ECHANGE"
                        android:paddingLeft="4dp"
                        android:textStyle="bold"

                        />

                    <ImageButton
                        android:id="@+id/imageScore"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/cancel"
                        android:background="@android:color/background_light"
                        android:adjustViewBounds="true"
                        android:scaleType="fitEnd"
                        android:padding="12dp" />

                </LinearLayout>

                <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:orientation="horizontal"
                    tools:layout_editor_absoluteX="1dp"
                    tools:layout_editor_absoluteY="1dp">


                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        >

                        <TextView
                            android:id="@+id/echangeJoueur1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:text="1"
                            android:width="100px"
                            android:autoSizeTextType="uniform"
                            />

                        <Button
                            android:id="@+id/pointGagnantJoueur1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:text="Point Gagnant"
                            android:background="#37DD53"
                            />
                        <Button
                            android:id="@+id/fauteDirectJoueur1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:text="Faute    Direct"
                            android:background="#FF3F3F"

                            />

                        <Button
                            android:id="@+id/fauteProvoqueeJoueur1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:text="Faute     Provo"
                            android:background="#FFD028"

                            />

                    </TableRow>


                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        >
                        <TextView
                            android:id="@+id/echangeJoueur2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:text="2"

                            android:autoSizeTextType="uniform"

                            />

                        <Button
                            android:id="@+id/pointGagnantJoueur2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:text="Point Gagnant"
                            android:background="#37DD53"

                            />
                        <Button
                            android:id="@+id/fauteDirectJoueur2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:text="Faute Direct"
                            android:background="#FF3F3F"

                            />

                        <Button
                            android:id="@+id/fauteProvoqueeJoueur2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:text="Faute     Provo"
                            android:background="#FFD028"

                            />

                    </TableRow>

                </TableLayout>

            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="1dp"
                tools:layout_editor_absoluteY="1dp"
                android:paddingTop="12dp">

                <TextView
                    android:id="@+id/textLieu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="LIEU"
                    android:paddingLeft="4dp"
                    android:textStyle="bold"

                    />

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    tools:layout_editor_absoluteX="1dp"
                    tools:layout_editor_absoluteY="1dp">

                    <TableLayout

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:orientation="vertical"
                        tools:layout_editor_absoluteX="1dp"
                        tools:layout_editor_absoluteY="1dp">

                        <TableRow>
                            <TextView
                                android:id="@+id/lat"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:paddingLeft="8dp"
                                android:text="latitude"

                                />
                        </TableRow>
                        <TableRow>

                            <TextView
                                android:id="@+id/longi"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="longitude"
                                android:paddingLeft="8dp"
                                />
                        </TableRow>
                    </TableLayout>

                    <LinearLayout

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        tools:layout_editor_absoluteX="1dp"
                        tools:layout_editor_absoluteY="1dp">

                        <ImageButton
                            android:id="@+id/imagePhoto"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/camera"
                            android:background="@android:color/background_light"
                            android:padding="30dp"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>