                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:textAlignment="textStart"
                            android:paddingLeft="20dp"
                            android:text="STATISTIQUES"
                            android:background="#BDE3F4"
                            android:gravity="start" />
