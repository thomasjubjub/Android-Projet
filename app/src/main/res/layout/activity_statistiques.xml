                            android:text="100%"
                            />
                        <TextView
                            android:id="@+id/textScore4"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:text="0%"
